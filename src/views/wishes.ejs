    <body class="wishesBody">
        <div class="container" style="position:absolute; margin-bottom: 33%; margin-left:2%;">
            <%if(success ==='Wishes Reached'){%>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                  <%=success%> To <%=frndName%>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <%}%>

        </div>
            <div class="cardgreeting">
                    <div class="cardFront"><h3 class="happy">HAPPY DIWALI!</h3>
                        <div class="fireworks">
                            <div class="fireworkOne" ></div>
                            <div class="fireworkTwo"></div>
                            <div class="fireworkThree"></div>
                
                        </div>
                    </div>
                    <div class="cardInside">
                            <h3 class="back">HAPPY DIWALI!</h3>
                            <p>Dear <%=frndName%>,</p>
                            <p>Wishing you exponential blessings this Diwali! May light always guide your way this Diwali and all year long!!</p>
                            <p class="ByName">From <%=name%></p>  
                    </div>
            </div>
            <br>
            
    </body>
</html>